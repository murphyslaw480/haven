{
  "name": "Terra-Arcana",
  "description": "A 2D turn-based strategy game",
  "copyright": "Copyright Â© 2014, rcorre",
  "license": "MIT",
  "authors": ["rcorre"],
  "dependencies": {
    "allegro": "2.0.3+5.0.10"
  },
  "targetPath": "bin/",
  "configurations": [
    {
      "name": "dynamic",
      "targetType": "executable",
      "platforms": [ "posix" ],
      "libs": [
        "allegro",
        "allegro_acodec",
        "allegro_audio",
        "allegro_color",
        "allegro_font",
        "allegro_image",
        "allegro_main",
        "allegro_ttf"
      ]
    },
    {
      "name": "static",
      "targetType": "executable",
      "platforms": [ "posix" ],
      "libs": [
        "allegro-static",
        "allegro_acodec-static",
        "allegro_audio-static",
        "allegro_color-static",
        "allegro_font-static",
        "allegro_image-static",
        "allegro_main-static",
        "allegro_ttf-static"
      ],
      "lflags": [
        "-L../allegro/build/lib",
        "-lFLAC",
        "-logg",
        "-ldumb",
        "-lvorbisfile",
        "-lvorbis",
        "-lpulse-simple",
        "-lpulse",
        "-lasound",
        "-lopenal",
        "-lpng",
        "-lz",
        "-ljpeg",
        "-lfreetype",
        "-lm",
        "-lpthread",
        "-lSM",
        "-lICE",
        "-lX11",
        "-lXext",
        "-lXcursor",
        "-lXinerama",
        "-lXrandr",
        "-lGL",
        "-lGLU"
      ]
    }
  ],
  "buildTypes": {
    "trace": {
      "buildOptions": ["debugMode", "debugInfo"],
      "debugVersions": ["StateTrace"]
    }
  }
}
